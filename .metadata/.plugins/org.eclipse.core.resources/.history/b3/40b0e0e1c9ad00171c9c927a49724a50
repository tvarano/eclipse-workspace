import java.util.Scanner;

//Thomas Varano
//[Program Descripion]
//Oct 10, 2017

public class GuessMyNumber
{
   public static void main(String[] args) {
      do {
         Scanner s = new Scanner(System.in);
         int totalTries = 10; boolean win = false; 
         String target = (int)(Math.random()*10+1)+"";
         for (int amtTries = 0; amtTries < totalTries && !win; amtTries++) {
            System.out.println("guess now");
            win = s.nextLine().equals(target);
         }
         System.out.println((win) ? "You won! play again?" : "you lost play again?");
         String playAgain = s.nextLine();
      } while (playAgain.equals("Y"));
   }
}

