package december.pictureLab;

import java.awt.Graphics2D;
import java.awt.image.BufferedImage;

public class Picture
{
   private Pixel[][] pixels;
   
   public Picture(Pixel[][] p) {
      this.pixels = p;
   }
   
   public Picture(BufferedImage i) {
      pixels = new Pixel[i.getHeight()][i.getWidth()];
      for (int r = 0; r < pixels.length; r++)
         for (int c = 0; c < pixels[r].length; c++)
            pixels[r][c] = new Pixel(i.getRGB(c, r));
   }
   
   public void paint(Graphics2D g2, int x, int y, int width, int height) {
      int pixH = height / pixels.length;
      int pixW = width / pixels[0].length;
      for(int i = 0; i < pixels.length; i++) 
         for (int j = 0; j < pixels[i].length; j++) 
            pixels[i][j].paint(g2, x + j*pixW, y + i*pixH, pixW, pixH);
   }
   
   public void paint(Graphics2D g2, int x, int y) {
      paint(g2, x, y, pixels[0].length, pixels.length);
   }
   
   public void mirrorHoriz() {
      for (int r = 0; r < pixels.length; r++)
         for (int c = 0; c < pixels[r].length/2; c++)
            pixels[r][pixels[r].length-c] = pixels[r][c];
   }
   
   public void paint(Graphics2D g2) {
      paint(g2, 0, 0);
   }
   
   public void setNegative() {
      for (Pixel[] ps : pixels)
         for (Pixel p : ps)
            p.setNegative();
   }
   
   public void removeRed() {
      for (Pixel[] ps : pixels)
         for (Pixel p : ps)
            p.setR(0);
   }
   public void removeGreen() {
      for (Pixel[] ps : pixels)
         for (Pixel p : ps)
            p.setG(0);
   }
   public void removeBlue() {
      for (Pixel[] ps : pixels)
         for (Pixel p : ps)
            p.setB(0);
   }
   public void setAlpha(int alpha) {
      for (Pixel[] ps : pixels)
         for (Pixel p : ps)
            p.setA(alpha);
   }
   
   public void setPixels(Pixel[][] pixels) {
      this.pixels = pixels;
   }
   
   public Pixel[][] getPixels() {
      return pixels;
   }
}
