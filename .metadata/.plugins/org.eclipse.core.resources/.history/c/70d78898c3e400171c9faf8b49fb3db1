package input;

import java.awt.BorderLayout;
import java.util.ArrayList;

import javax.swing.BoxLayout;
import javax.swing.JPanel;

import information.ClassPeriod;
import information.Schedule;

public class GPAInput extends JPanel
{
   private static final long serialVersionUID = 1L;
   private Schedule sched;
   private JPanel center;
   private ArrayList<GPAInputSlot> slots;
   private boolean debug;
   
   public GPAInput(Schedule sched) {
      if (sched != null)
         init(sched);
      else 
         init(0);
      this.sched = sched;
   }
   
   public GPAInput(int amtClasses) {
      init(amtClasses);
   }
   
   private void init0() {
      debug = true;
      center = new JPanel();
      center.setLayout(new BoxLayout(center, BoxLayout.Y_AXIS));
      setLayout(new BorderLayout());
      slots = new ArrayList<GPAInputSlot>();
   }
   
   private void init(Schedule s) {
      init0();
      initAndAddComponents(s);
   }
   
   private void init(int amtClasses) {
      init0();
      initAndAddComponents(amtClasses);
   }
   
   private void initAndAddComponents(Schedule sched) {
      for (int i = 0; i < sched.getClasses().length; i++)
         addSlot(sched.getClasses()[i]);
   }
   
   private void initAndAddComponents(int amtClasses) {
      for (int i = 0; i < amtClasses; i++) 
         addSlot(new ClassPeriod(i));
   }
   
   private void addSlot(ClassPeriod c) {
      GPAInputSlot add = new GPAInputSlot(c);
      center.add(add);
      slots.add(add);
   }
   
   private void addSlot(int slot) {
      addSlot(new ClassPeriod(slot));
   }
   
   public void calculateGPA() {
      
   }
}
