package december;

public final class BaseConverter
{
   public static String fromBase10(long in, int toBase) {
      String retval = "";
      do {
         long addition = in % toBase;
         in /= toBase;
         retval = addition + retval;
      } while (in > 0);
      return retval;
   }

   public static void main(String[] args) {
      System.out.println(fromBase10(8,2));
   }
}
